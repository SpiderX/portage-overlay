<pkgmetadata>
	<maintainer type="person">
		<email>spiderx@spiderx.dp.ua</email>
		<name>Vladimir Pavljuchenkov</name>
	</maintainer>
	<maintainer type="project">
		<email>proxy-maint@gentoo.org</email>
